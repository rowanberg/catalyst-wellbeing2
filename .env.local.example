# Supabase Configuration
# Get these values from your Supabase project dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# App Configuration
# Generate a random 32-character string for NEXTAUTH_SECRET
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Security Configuration for Communications
# Encryption settings for secure messaging
ENCRYPTION_KEY_SIZE=2048
MESSAGE_ENCRYPTION_ALGORITHM=RSA-OAEP
SYMMETRIC_ENCRYPTION_ALGORITHM=AES-GCM

# Content Moderation Settings

# Gemini AI Configuration
# Generate a random 32-character string for encryption
GEMINI_ENCRYPTION_KEY=your_32_character_encryption_key_here
CONTENT_ANALYSIS_ENABLED=true
EMERGENCY_KEYWORDS_THRESHOLD=0.8
BULLYING_DETECTION_THRESHOLD=0.7
INAPPROPRIATE_CONTENT_THRESHOLD=0.6

# Office Hours Configuration (in UTC)
OFFICE_HOURS_START=09:00
OFFICE_HOURS_END=17:00
OFFICE_HOURS_TIMEZONE=UTC
WEEKEND_MESSAGING_DISABLED=true

# Emergency System Configuration
EMERGENCY_NOTIFICATION_ENABLED=true
EMERGENCY_SOUND_ENABLED=true
ADMIN_EMERGENCY_EMAIL=admin@school.edu

# Audit and Logging
AUDIT_LOGGING_ENABLED=true
LOG_LEVEL=info
LOG_RETENTION_DAYS=365

# Rate Limiting
MESSAGE_RATE_LIMIT_PER_MINUTE=30
CHANNEL_CREATION_RATE_LIMIT_PER_HOUR=10

# Instructions:
# 1. Copy this file to .env.local
# 2. Replace the placeholder values with your actual Supabase credentials
# 3. Get the Service Role Key from Settings > API (WARNING: Keep this secret!)
# 4. Generate a secure NEXTAUTH_SECRET using: openssl rand -base64 32
# 5. Configure security settings according to your school's policies
# 6. Set appropriate office hours for your timezone
# 7. Configure emergency notification email address
