{
    "name": "catalystwells-mcp-server",
    "version": "1.0.0",
    "description": "MCP Tool Server for CatalystWells Admin Dashboard - Enables Gemini 3 AI to interact with admin APIs",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "test:schemas": "tsx src/tests/schema-validation.ts",
        "test:endpoints": "tsx src/tests/endpoint-validation.ts",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "catalystwells",
        "admin",
        "ai-tools"
    ],
    "author": "CatalystWells",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "@supabase/supabase-js": "^2.86.0",
        "axios": "^1.7.9",
        "dotenv": "^16.4.7",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
