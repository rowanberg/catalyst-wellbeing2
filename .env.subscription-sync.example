# ============================================
# SUBSCRIPTION SYNC SECURITY CONFIGURATION
# Add these to your .env.local file
# ============================================

# ============================================
# CRITICAL: Must match EXACTLY with landing page
# ============================================

# Inter-Service API Secret (64-char hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
INTER_SERVICE_API_SECRET=your-64-char-hex-secret-here

# API Key Identifier (must match landing page)
INTER_SERVICE_API_KEY_ID=landing_page_v1

# JWT Secret for service-to-service auth (64-char hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
INTER_SERVICE_JWT_SECRET=your-64-char-hex-jwt-secret-here

# Request Signing Secret for HMAC (64-char hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REQUEST_SIGNING_SECRET=your-64-char-hex-signing-secret-here

# Data Encryption Key for AES-256-GCM (64-char hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DATA_ENCRYPTION_KEY=your-64-char-hex-encryption-key-here

# ============================================
# IP WHITELISTING
# ============================================

# Comma-separated list of allowed IPs from landing page
# Example: 203.0.113.5,198.51.100.10
# Leave empty in development to allow localhost
ALLOWED_LANDING_PAGE_IPS=

# ============================================
# EXISTING ENVIRONMENT VARIABLES (no changes)
# ============================================

# These should already be in your .env.local
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
